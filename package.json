{
  "name": "node-microservice-boilerplate",
  "version": "1.0.0",
  "private": false,
  "description": "Node Microservice Boilerplate",
  "repository": {
    "type": "git",
    "url": "git://github.com/orassayag/node-microservice-boilerplate.git"
  },
  "keywords": [
    "microservice",
    "boilerplate",
    "node.js",
    "typescript"
  ],
  "license": "UNLICENSED",
  "author": "Or Assayag <orassayag@gmail.com>",
  "contributors": [
    {
      "name": "Or Assayag",
      "email": "orassayag@gmail.com",
      "url": "https://github.com/orassayag"
    }
  ],
  "files": [
    "src",
    ".eslintignore",
    ".eslintrc",
    ".gitignore",
    ".jsbeautifyrc",
    ".npmignore",
    "INSTRUCTIONS.md",
    "package-lock.json",
    "package.json",
    "README.md"
  ],
  "main": "dist/src/app.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/src/app.js\"",
    "start": "tsc && node dist/src/app.js",
    "release": "npm-run-all -s test",
    "test-release": "npm i && npm run release",
    "test": "jest",
    "eslint": "eslint --fix",
    "prettier": "prettier --write .",
    "beautify": "npm-run-all eslint prettier "
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-pino-logger": "^7.0.0",
    "express-useragent": "^2.1.0",
    "morgan": "^1.10.1",
    "npm-run-all": "^4.1.5",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "redis": "^5.10.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
