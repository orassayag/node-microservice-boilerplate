  "files": [
    "src",
    ".eslintignore",
    ".eslintrc",
    ".gitignore",
    ".jsbeautifyrc",
    ".npmignore",
    "INSTRUCTIONS.md",
    "package-lock.json",
    "package.json",
    "README.md"
  ],
  "main": "dist/src/app.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/src/app.js\"",
